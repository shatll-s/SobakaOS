			[[ $miner_dual_algo == "ethash" || $miner_algo == 'ethash' || $miner_algo == 'kawpow' ]] && delimiter=1000 || delimiter=1
			miner_hr[i]=`echo "scale=2; ${miner_hr_raw[i]} / $delimiter" | bc -l`
